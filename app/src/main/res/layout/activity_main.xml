<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_idle"
                    android:textSize="16sp"
                    android:textColor="@color/status_text"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textSize="52sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginTop="16dp"
                    android:fontFamily="monospace" />

                <TextView
                    android:id="@+id/tvFileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/hint_text"
                    android:layout_marginTop="8dp"
                    android:maxLines="1"
                    android:ellipsize="middle"
                    tools:text="recording_20240101_120000.wav" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Record Button -->
        <Button
            android:id="@+id/btnRecord"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="@string/btn_start_recording"
            android:background="@drawable/btn_record_selector"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusDown="@id/btnPlay" />

        <!-- Play/Stop Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnPlay"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="@string/btn_play"
                android:background="@drawable/btn_play_selector"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:enabled="false"
                android:layout_marginEnd="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusDown="@id/listViewRecordings"
                android:nextFocusUp="@id/btnRecord" />

            <Button
                android:id="@+id/btnStop"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="@string/btn_stop"
                android:background="@drawable/btn_stop_selector"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:enabled="false"
                android:layout_marginStart="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusDown="@id/listViewRecordings"
                android:nextFocusUp="@id/btnRecord" />

        </LinearLayout>

        <!-- Recording History Section -->
        <TextView
            android:id="@+id/tvHistoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recording_history"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/status_text"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:focusable="false" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp">

            <ListView
                android:id="@+id/listViewRecordings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@android:color/transparent"
                android:dividerHeight="8dp"
                android:scrollbars="vertical"
                android:choiceMode="singleChoice"
                android:listSelector="@android:color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:descendantFocusability="afterDescendants" />

            <TextView
                android:id="@+id/tvEmptyHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_recordings"
                android:textSize="15sp"
                android:textColor="@color/hint_text"
                android:layout_gravity="center"
                android:gravity="center" />

        </FrameLayout>

        <!-- Hint text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_select_recording"
            android:textSize="12sp"
            android:textColor="@color/hint_text"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</ScrollView>