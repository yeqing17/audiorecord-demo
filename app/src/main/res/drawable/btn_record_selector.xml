<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <!-- Yellow border -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/focus_border" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <!-- Inner button with padding for border -->
            <item android:left="6dp" android:right="6dp" android:top="6dp" android:bottom="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/record_button" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/record_button_active" />
            <corners android:radius="14dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/record_button" />
            <corners android:radius="14dp" />
        </shape>
    </item>
</selector>