<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/item_focused" />
            <stroke android:width="4dp" android:color="@color/focus_border_thick" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFF59D" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/item_selected" />
            <stroke android:width="2dp" android:color="@color/play_button" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/item_selected" />
            <stroke android:width="2dp" android:color="@color/play_button" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/card_background" />
            <stroke android:width="1dp" android:color="@color/divider" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>