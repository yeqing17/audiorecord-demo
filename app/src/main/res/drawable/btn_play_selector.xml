<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_enabled="true">
        <layer-list>
            <!-- Yellow border -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/focus_border" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <!-- Inner button with padding for border -->
            <item android:left="6dp" android:right="6dp" android:top="6dp" android:bottom="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/play_button" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#2E7D32" />
            <corners android:radius="14dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#9E9E9E" />
            <corners android:radius="14dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/play_button" />
            <corners android:radius="14dp" />
        </shape>
    </item>
</selector>